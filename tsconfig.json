{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "lib/esm",
    "paths": {
      "@/*": ["*"]
    },
    "module": "esnext",
    "target": "es5",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "declarationMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
